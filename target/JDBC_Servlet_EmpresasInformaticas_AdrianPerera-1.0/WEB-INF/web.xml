<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BuscadorIdTiendaServlet</servlet-name>
        <servlet-class>es.cifpcm.ejer2_pererahernandezadrian.buscador.web.BuscadorIdTiendaServlet</servlet-class>
        <init-param>
            <param-name>app.config</param-name>
            <param-value>empresasinformaticas</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ListarTiendasServlet</servlet-name>
        <servlet-class>es.cifpcm.ejer2_pererahernandezadrian.controller.ListarTiendasServlet</servlet-class>
        <init-param>
            <param-name>app.config</param-name>
            <param-value>empresasinformaticas</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscadorIdTiendaServlet</servlet-name>
        <url-pattern>/buscadoridtienda</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginControllerServlet</servlet-name>
        <servlet-class>es.cifpcm.loginmvc.web.controller.LoginControllerServlet</servlet-class>
        <init-param>
            <param-name>app.config</param-name>
            <param-value>empresasinformaticas</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControllerServlet</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetallesFacturaServlet</servlet-name>
        <servlet-class>es.cifpcm.ejer2_pererahernandezadrian.buscador.web.DetallesFacturaServlet</servlet-class>
        <init-param>
            <param-name>app.config</param-name>
            <param-value>empresasinformaticas</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetallesFacturaServlet</servlet-name>
        <url-pattern>/detallesfactura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarTiendasServlet</servlet-name>
        <url-pattern>/ListarTiendasServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
